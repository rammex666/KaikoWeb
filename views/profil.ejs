            background: linear-gradient(to bottom, #E957FA, #3E21F6);
            margin: 0;
            height: 100%;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow-x: hidden;
        }
        nav {
            width: 60px;
            background: linear-gradient(to bottom, #E957FA, #3E21F6);
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px 0;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            transition: width 0.3s;
            overflow: hidden;
            border-radius: 10px;
        }
        nav.expanded {
            width: 200px;
        }
        nav a {
            color: white;
            text-decoration: none;
            margin: 10px 0;
            padding: 10px;
            width: 100%;
            text-align: center;
            border-radius: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.3s;
        }
        nav a span {
            margin-left: 10px;
            display: none;
        }
        nav.expanded a span {
            display: inline-block;
        }
        nav a:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }
        .toggle-btn {
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            margin-bottom: 20px;
            width: 100%;
            text-align: center;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .toggle-btn:hover {
            background-color: rgba(255, 255, 255, 0.3);
            box-shadow: 2px 10px 5px rgba(0, 0, 0, 0.1)
        }
        .toggle-btn:focus,
        .toggle-btn:active {
            outline: none;
            box-shadow: none;
        }
        .main-content {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100%;
        }
        .card-container {
            display: flex;
            justify-content: space-between;
            width: 100%;
            max-width: 1200px;
        }
        .profile-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 40%;
            max-width: 600px;
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 400px; /* Set the height to match the original profile card */
            box-sizing: border-box;
        }
        .guild-card, .leaderboard-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 25%; /* Make the guild and leaderboard cards narrower */
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 400px; /* Set the height to match the profile card */
        }
        .profile-card img {
            width: 80px; /* Reduce the size of the avatar */
            height: 80px; /* Reduce the size of the avatar */
            border-radius: 50%;
            margin-bottom: 10px; /* Reduce the margin */
        }
        .profile-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
        }
        .profile-info h2 {
            margin: 0;
            font-size: 1.5em; /* Reduce the font size */
            color: #333;
            text-align: center;
        }
        .profile-info p {
            color: #777;
            margin: 5px 0; /* Reduce the margin */
            text-align: center;
            font-size: 0.9em; /* Reduce the font size */
        }
        .profile-info .stats {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            width: 100%;
            margin-top: 10px; /* Reduce the margin */
        }
        .profile-info .stats div {
            text-align: center;
            flex: 1 1 45%;
            margin: 5px 0; /* Reduce the margin */
            background-color: #f0f0f0;
            padding: 5px; /* Reduce the padding */
            border-radius: 5px;
        }
        .profile-info .stats div h3 {
            margin: 0;
            font-size: 1.2em; /* Reduce the font size */
            color: #333;
        }
        .profile-info .stats div p {
            margin: 0;
            color: #777;
            font-size: 0.8em; /* Reduce the font size */
